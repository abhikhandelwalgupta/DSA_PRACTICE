 *****
 ----------------------------
 
 #include<iostream>
using namespace std;


int main(){

    int sp=1,n,i=1,j=1;
    cin>>n;
    
    while(i<=n) {
        sp=1;
        while(sp<=(n-i)) {
            cout<<" ";
            sp++;
        }
        j=1;
        while(j<=(i*2)-1) {
            cout<<"*";
            j++;
        }
        cout<<endl;
        i++;
    }
  
}


