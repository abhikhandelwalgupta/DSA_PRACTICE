#include<iostream>
using namespace std;


int main(){

     
   int  n,i=1,j=0,sp=0;
    cin>>n;
    
    while(i<=n) {
        sp=1;
        while(sp<=(n-i)) {
         cout<<" ";
         sp++;
     }
        j=1;
        while(j<=(i*2)-1) {
            cout<<"*";
            j++;
        }
        cout<<endl;
        i++;
    }
}


