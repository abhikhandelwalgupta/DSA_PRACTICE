    1
   2 3
  3 4 5
 4 5 6 7 
 
 
 
 
 #include<iostream>
using namespace std;


int main(){

    
    int n,i=1,j=1,sp=1,val=0;
    cin>>n;
    
    while(i<=n) {
        sp=1;
        while(sp<=(n-i)) {
            cout<<" ";
            sp++;
        }
        
        val=i;
        j=1;
        while(j<=i){
            cout<<val;
            j++,val++;
        }
        i++;
        cout<<endl;
    }
  
}

 
