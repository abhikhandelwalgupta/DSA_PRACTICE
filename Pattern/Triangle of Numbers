  ----------------------------------------------------------
  
  #include <iostream>
using namespace std;

int main() {
  
    int n,i=1,j=1,sp,temp;
    cin>>n;
    
    while(i<=n) {
        sp=1;
        while(sp<=(n-i)) {
            cout<<" ";
            sp++;
        }
        
        temp = i-1,j=1;
        while(j<=(i*2)-1) {
            if(j<=i) 
                ++temp;
            else 
                --temp ;
            cout<<temp;
            j++;
        }
        i++;
        cout<<endl;
    }
}
